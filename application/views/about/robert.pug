extends ../layout

block content
  - var color = "pink"
  .container.center-align
    .row.left-align
      a.waves-effect.waves-light.btn.darken-3(href="/about" class=color) 
        .row
          .col.s4
            i.material-icons chevron_left face
          .col.s8
            span about us
    .row 
      .col.s8
        img.responsive-img.circle(src="../images/profile_pics/robert.jpg")
      .col.s4
        .row
          .card-panel.lighten-2(class=color)
            h4 Robert Clarkson 
        .row
          .card-panel.lighten-3(class=color)
            h5 Team Lead  
    .row  
      .card-panel.lighten-4(class=color)
        span.flow-text A senior at SFSU in Computer Science. I love working on cars old and new! I also have a soft spot for robotics and web development. If you want to be my bestfriend take me out to sushi!
    .row
      a(href="https://github.com/robertIanClarkson" target="_blank")
        img(src="https://ghchart.rshah.org/robertIanClarkson")
