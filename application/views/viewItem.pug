extends layout

block content
    link(rel='stylesheet', href='/stylesheets/ItemStyle.css')
    .div()
        // split screen in half with 2 floating containers
        .div(class = "f_right")
            h4 Title
            p(class="highlight" id="title") Item name goes here
            h4 Description
            p(class="highlight" class="desc" id="description") The description goes in here n stuff
            h3(class="highlight" style="float:left") 50$
            button#itembutton(style="float:right") Contact

        .div(class = "f_left")
            img(src='images/profile_pics/gerardo.png' alt="this if image does not exist")
            <textarea id="textarea1" class="materialize-textarea"></textarea>
            <label for="textarea1">Textarea</label>